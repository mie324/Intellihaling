<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/green">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="25dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">

        <TextView
            android:id="@+id/instruction_green_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Showing Time"
            android:textSize="25sp"
            android:gravity="center"
            android:textAlignment="center">
        </TextView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/instruction_green_img_1"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@mipmap/img_light"
                android:layout_alignParentLeft="true"/>

            <ImageView
                android:id="@+id/instuction_green_img_2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignRight="@+id/instruction_pass_img_1"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/img_good"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/instruction_green_text_pass_msg_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/instruction_you_are_fine"
            android:textSize="25sp"
            android:textAlignment="center">
        </TextView>

        <TextView
            android:id="@+id/instruction_green_text_pass_msg_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/instruction_do_not_need"
            android:textSize="25sp"
            android:textAlignment="center">
        </TextView>

        <Button
            android:id="@+id/btn_instruction_green_done_btn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/circle"
            android:text="OK"
            android:textSize="25sp"
            android:textAllCaps="true"
            android:textColor="#fff" />

    </LinearLayout>



</RelativeLayout>