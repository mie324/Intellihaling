<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/green">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="25dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">

        <TextView
            android:id="@id/instruction_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Showing Time"
            android:textSize="25sp"
            android:gravity="center"
            android:textAlignment="center">
        </TextView>

        <ImageView
            android:id="@+id/instruction_pass_img_2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@mipmap/img_1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/instruction_pass_text_pass_msg_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/instruction_you_are_fine"
            android:textSize="40sp"
            android:textAlignment="center"
            android:layout_marginTop="20dp">
        </TextView>

        <TextView
            android:id="@+id/instruction_pass_text_pass_msg_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/instruction_good_to_go"
            android:textSize="40sp"
            android:textAlignment="center"
            android:layout_marginTop="20dp">
        </TextView>

        <Button
            android:id="@+id/btn_instruction_pass_done_btn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/circle"
            android:text="Done"
            android:textSize="20sp"
            android:textAllCaps="true"
            android:textColor="#fff" />

    </LinearLayout>



</RelativeLayout>